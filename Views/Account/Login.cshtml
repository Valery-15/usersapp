@model UsersApp.ViewModels.LoginViewModel



<div class="form-group">
    <h2 class="h2 text-primary">Authentication</h2>

    <form method="post" asp-controller="Account" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">

        <div asp-validation-summary="ModelOnly"></div>

        <div>
            @*<label asp-for="Email"></label><br />*@
            <br /><input asp-for="Email" placeholder="e-mail"/>
            <span asp-validation-for="Email"></span>
            <br />
        </div>
        <div>
            @*<br /><label asp-for="Password"></label><br />*@
            <br /><input asp-for="Password" placeholder="password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <br /><input type="submit" class="btn btn-primary" value="Log In" /><br />
        </div>
    </form>

    <br /><a asp-controller="Account" asp-action="Register">New user? Register</a>
</div>




